{
    "swagger": "2.0",
    "info": {
        "title": "Provider - BCB API.",
        "description": "API that manages Burguer Cangre-Burguer Provider integrations.",
        "version": "1.0.0",
        "contact": {
            "name": "Eugene H. Cangrejo"
        }
    },
    "host": "api.example.com",
    "basePath": "/bcb/provider/v1",
    "schemes": [
        "https"
    ],
    "tags": [
        {
            "name": "provider",
            "description": "Operations that involves providers information."
        }
    ],
    "paths": {
        "/bcb/providers": {
            "get": {
                "summary": "Gets a provider information.",
                "description": "Gets a provider detail information by identifier.",
                "operationId": "getProviderList",
                "tags": [
                    "provider"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/storeId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Resource obtained successfully.",
                        "schema": {
                            "$ref": "#/definitions/GetProviderResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request or functional error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "404": {
                        "description": "Not Found."
                    },
                    "500": {
                        "description": "Internal server error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    }
                }
            }
        },
        "/bcb/providers/{providerId}": {
            "get": {
                "summary": "Gets an Provider information.",
                "description": "Gets an Provider detail information by identifier.",
                "operationId": "getProviderByStoreId",
                "tags": [
                    "provider"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/providerId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Resource obtained successfully.",
                        "schema": {
                            "$ref": "#/definitions/ProviderType"
                        }
                    },
                    "400": {
                        "description": "Bad request or functional error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "404": {
                        "description": "Not Found."
                    },
                    "500": {
                        "description": "Internal server error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "provider"
                ],
                "summary": "Create a new provider for a store.",
                "description": "Create a new Provider.",
                "operationId": "createProvider",
                "parameters": [
                    {
                        "$ref": "#/parameters/providerId"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Entity created successfully."
                    },
                    "400": {
                        "description": "Bad Request.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "404": {
                        "description": "Not found."
                    },
                    "500": {
                        "description": "Internal Server Error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    }
                }
            },
            "patch": {
                "tags": [
                    "provider"
                ],
                "summary": "Modify an Provider data.",
                "description": "Modify an provider information.",
                "operationId": "patchProvider",
                "parameters": [
                    {
                        "$ref": "#/parameters/ProviderId"
                    },
                    {
                        "in": "body",
                        "name": "data",
                        "description": "Requested data.",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "required": [
                                "modification"
                            ],
                            "properties": {
                                "modification": {
                                    "$ref": "#/definitions/ProviderType"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Resource updated successfully.",
                        "schema": {
                            "$ref": "#/definitions/ProviderType"
                        }
                    },
                    "202": {
                        "description": "Accepted."
                    },
                    "400": {
                        "description": "Bad request or functional error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "404": {
                        "description": "Not Found."
                    },
                    "500": {
                        "description": "Internal server error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "provider"
                ],
                "summary": "Edit Provider.",
                "description": "Edit an Provider using the providerId and overwrites all fields for the resource.",
                "operationId": "putProvider",
                "parameters": [
                    {
                        "$ref": "#/parameters/providerId"
                    },
                    {
                        "name": "data",
                        "in": "body",
                        "description": "Provider information.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ProviderType"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Entity updated successfully.",
                        "schema": {
                            "$ref": "#/definitions/ProviderType"
                        }
                    },
                    "202": {
                        "description": "Accepted."
                    },
                    "400": {
                        "description": "Invalid format or functional error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "404": {
                        "description": "Not Found."
                    },
                    "500": {
                        "description": "Server exception.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "provider"
                ],
                "summary": "Delete an Provider related to a store.",
                "description": "Delete an Provider by identifier and store identifier.",
                "operationId": "deleteProvider",
                "parameters": [
                    {
                        "$ref": "#/parameters/providerId"
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Accepted."
                    },
                    "204": {
                        "description": "Entity deleted successfully."
                    },
                    "400": {
                        "description": "Bad Request.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "404": {
                        "description": "Not found."
                    },
                    "500": {
                        "description": "Internal Server Error.",
                        "schema": {
                            "$ref": "#/definitions/ErrorMng"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "GetProviderResponse": {
            "type": "object",
            "required": [
                "data"
            ],
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ProviderType"
                    }
                }
            }
        },
        "ProviderType": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Provider identifier.",
                    "example": 101
                },
                "name": {
                    "type": "string",
                    "description": "Provider name.",
                    "example": "Hornos HNH"
                },
                "ProviderCode": {
                    "type": "string",
                    "pattern": "((^| )[A-C]-[0-9]+)",
                    "description": "Provider code identification.",
                    "example": "A-002"
                }
            }
        },
        "ErrorMng": {
            "type": "object",
            "required": [
                "code",
                "description"
            ],
            "properties": {
                "code": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        }
    },
    "parameters": {
        "providerId": {
            "in": "path",
            "name": "providerId",
            "type": "number",
            "description": "Provider identifier.",
            "required": true
        }
    }
}